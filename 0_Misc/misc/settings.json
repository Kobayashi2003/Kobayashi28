{
    // normal mode
    "vim.normalModeKeyBindingsNonRecursive": [
      {
        "before": ["<leader>", "d"],
        "commands": ["workbench.view.debug"]
      },
      {
        "before": ["<leader>", "b"],
        "commands": ["editor.debug.action.toggleBreakpoint"]
      },
      {
        "before": ["<C-n>"],
        "commands": [":nohl"]
      },
      {
        "before": ["K"],
        "commands": ["lineBreakInsert"],
        "silent": true
      },
      { 
         "before": ["<leader>", "t"],
         "commands": ["workbench.action.terminal.focus"]
      },
      {
        "before": ["<leader>", "l"],
        "commands": ["workbench.action.nextEditor"]
      },
      {
        "before": ["<leader>", "h"],
        "commands": ["workbench.action.previousEditor"]
      },
      {
        "before": ["<leader>", "q"],
        "commands": ["workbench.action.closeActiveEditor"]
      },
      {
        "before": ["<leader>", "e"],
        "commands": ["workbench.view.explorer"]
      },
      {
        "before": ["<leader>", "<leader>", "e"],
        "commands": ["workbench.action.files.revealActiveFileInWindows"]
      },
      {
        "before": ["<C-j>"],
        "commands": ["cursorDown", "cursorDown", "cursorDown"]
      },
      {
        "before": ["<C-k>"],
        "commands": ["cursorUp", "cursorUp", "cursorUp"]
      },
      {
        "before": ["<C-h>"],
        "commands": ["cursorLeft", "cursorLeft", "cursorLeft"]
      },
      {
        "before": ["<C-l>"],
        "commands": ["cursorRight", "cursorRight", "cursorRight"]
      },
      {
        "before": ["J"],
        "commands": ["scrollLineDown"]
      },
      {
        "before": ["K"],
        "commands": ["scrollLineUp"]
      },
      {
        "before": ["<leader>", "a"],
        "commands": ["editor.emmet.action.incrementNumberByOne"]
      },
      {
        "before": ["<leader>", "x"],
        "commands": ["editor.emmet.action.decrementNumberByOne"]
      },
      {
        "before": ["<leader>", "<leader>", "a"],
        "after": ["m", "a", "g", "g", "v", "G", "$", "o"]
      },
      {
        // search html tag (the whole page)
        "before": ["t"],
        "after": ["<leader>", "<leader>", "s", ">"]
      },
      {
        // search html tag > (in current line)
        "before": ["<leader>", "j"],
        "after": ["f", ">"]
      },
      {
        // search html tag < (in current line)
        "before": ["<leader>", "k"],
        "after": ["F", "<"]
      }
    ],

    // visual mode
    "vim.visualModeKeyBindings": [
      {
        "before": ["<C-c>"],
        "commands": ["editor.action.clipboardCopyAction"]
      },
      {
        "before": ["<leader>", "a"],
        "commands": ["editor.emmet.action.incrementNumberByOne"]
      },
      {
        "before": ["<leader>", "x"],
        "commands": ["editor.emmet.action.decrementNumberByOne"]
      },
      {
        "before": ["i", "l"],
        "after": ["<Esc>", "$", "v", "^"]
      },
      {
        "before": ["<C-j>"],
        "commands": ["cursorDown", "cursorDown", "cursorDown"]
      },
      {
        "before": ["<C-k>"],
        "commands": ["cursorUp", "cursorUp", "cursorUp"]
      },
      {
        "before": ["<C-h>"],
        "commands": ["cursorLeft", "cursorLeft", "cursorLeft"]
      },
      {
        "before": ["<C-l>"],
        "commands": ["cursorRight", "cursorRight", "cursorRight"]
      },
      {
        "before": ["J"],
        "commands": ["scrollLineDown"]
      },
      {
        "before": ["K"],
        "commands": ["scrollLineUp"]
      }
    ],

    // insert mode
    "vim.insertModeKeyBindings": [
      {
        "before": ["j", "k"],
        "after": ["<Esc>"],
        "slient": true
      },
      {
        "before": ["k", "j"],
        "after": ["<Esc>"],
        "slient": true
      },
      {
        "before": ["<C-c>"],
        "commands": ["editor.action.clipboardCopyAction"]
      }
    ]
  }