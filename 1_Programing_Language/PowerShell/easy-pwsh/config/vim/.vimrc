syntax on
colorscheme ron 

set fileencodings=utf-8,gb2312,gb18030,gbk,ucs-bom,cp936,latin1
set enc=utf8
set fencs=utf8,gbk,gb2312,gb18030

set number
set relativenumber

set wrap
set showcmd
set wildmenu

set autoindent
set tabstop=2
set softtabstop=2
set shiftwidth=2
set expandtab

set t_Co=256
set textwidth=80
set scrolloff=5

set ruler

set showmatch
set hlsearch
set incsearch
set ignorecase
set smartcase

set history=1024

set showmode

inoremap jk <ESC>
inoremap kj <ESC>

